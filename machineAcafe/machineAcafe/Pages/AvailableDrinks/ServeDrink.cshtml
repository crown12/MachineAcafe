@page
@model machineAcafe.Pages.AvailableDrinks.ServeDrinkModel
@{
}

<h3 class="alert alert-light">Prepare your drink:</h3>

<div class="border container col-6" style="padding:30px;">
    
    <form method="post">
        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="Order.Badge.Serial"> Badge : </label>
            </div>
            <div class="col-7">
                <input class="form-control"  asp-for="Order.Badge.Serial" /> <span class="badge badge-info"> Optional </span>
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="Order.Drink.Name"> Drink : </label>
            </div>
            <div class="col-7">
                <select class="form-control"
                        asp-for="Order.Drink.Id"
                        asp-items="@(new SelectList(Model.Drinks,"Id", "Name"))">
                </select>
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="Order.Drink.Sugar"> Sugar : </label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="Order.Drink.Sugar" /> 
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="Order.Mug"> Own Mug : </label>
            </div>
            <div class="col-7">
                <select class="form-control" asp-for="Order.Mug">
                    <option value="">Personal Mug?</option>
                    <option value="true"> Yes, I have it.</option>
                    <option value="false"> No, I don't have it.</option>

                </select>
            </div>
        </div>
        <hr />




        <div class="form-group row ">
            <div class="col-6">
                <button class="btn btn-primary btn-block" type="submit"> Order   </button>
            </div>
            <div class="col-4">
                <button class="btn btn-secondary btn-block"> Cancel   </button>
            </div>
        </div>
    </form>
</div>
