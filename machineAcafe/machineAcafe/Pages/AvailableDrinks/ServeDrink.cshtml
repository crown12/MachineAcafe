@page
@model machineAcafe.Pages.AvailableDrinks.ServeDrinkModel
@{
}

<h3 class="alert alert-light">Prepare your drink:</h3>

<div class="border container col-6" style="padding:30px;">

    <form method="post">

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="drinkOrder.BadgeSerial"> Badge : </label>
            </div>
            <div class="col-7">
                <input id="badge" class="form-control" asp-for="drinkOrder.BadgeSerial" /> <span class="badge badge-info"> Optional </span>
            </div>
            <div class="alert-info" id="lastOrder"></div>
        </div>

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="drinkOrder.DrinkId"> Drink : </label>
            </div>
            <div class="col-7">
                <select id="drink" class="form-control"
                        asp-for="drinkOrder.DrinkId"
                        asp-items="@(new SelectList(Model.Drinks,"Id", "Name"))">
                </select>
            </div>
        </div>


        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="drinkOrder.Quantity"> Sugar : </label>
            </div>
            <div class="col-3">
                <input id="sugar" class="form-control" asp-for="drinkOrder.Quantity" />
            </div>
            <span asp-validation-for="drinkOrder.Quantity" class="text-danger"></span>
        </div>

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="drinkOrder.Mug"> Own Mug : </label>
            </div>
            <div class="col-7">
                <select id="sltMug" class="form-control" asp-for="drinkOrder.Mug" >
                    <option selected="selected" value="">Personal Mug?</option>
                    <option value="true"> Yes, I have it.</option>
                    <option value="false"> No, I don't have it.</option>

                </select>
                <span asp-validation-for="drinkOrder.Mug" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row ">
            <div class="col-6">
                <button class="btn btn-primary btn-block" type="submit"> Order   </button>
            </div>
            <div class="col-4">
                <a asp-page="/Index" class="btn btn-secondary btn-block"> Cancel   </a>
            </div>
        </div>
    </form>
</div>

@section Scripts{


    <script src="~/js/myOrderDetails.js"></script>

}